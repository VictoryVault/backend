    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug locally with uvicorn/FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Run in container",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "wait-for-docker", // This refers to a task defined in tasks.json
            "postDebugTask": "remove-docker",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
        }
    ]
}